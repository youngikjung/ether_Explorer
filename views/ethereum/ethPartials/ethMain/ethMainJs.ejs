<script type="text/javascript">
  $(document).ready(function(){
    
    if('<%=isAuth%>') { 
      function fn_setInterval() {
        var count = 10;
        var countdown = setInterval(function(){ 
           
          $('#dbblock-connecter').append(
                                          "<div class='table100-head'>"
                                          + "<table>"
                                          +   "<thead>"
                                          +     "<tr class='row100 head' id='blockCount'>"
                                          +       "<th class='cell100 column1'>Latest Blocks       <span style='font-size: 13px;'>"+ "before   " + count + "  sec" + "</span></th>"
                                          +     "</tr>"
                                          +   "</thead>"
                                          + "</table>"
                                          +"</div>"                          
          );
          
          $("#dbtx-connecter").append(
                                        "<div class='table100-head'>"
                                        + "<table>"
                                        +   "<thead>"
                                        +     "<tr class='row100 head' id='txCount'>"
                                        +       "<th class='cell100 column1'>Latest Transactions       <span style='font-size: 13px;'>"+ "before   " + count + "  sec" + "</span></th>"
                                        +     "</tr>"
                                        +   "</thead>"
                                        + "</table>"
                                        +"</div>"
          );
          
          if (count == 0) {
            fn_newBlockData();
            fn_setInterval(); 
            clearInterval(countdown);
          }
          count--;
        }, 600);
      };
      
      fn_setInterval();     
      fn_newBlockData();   
    }
  });
  var checkFlag = false;
  
  var fn_newBlockData = async () => {
    var _block = await fn_getBlockData();
    var _tx = await fn_getTxData();
      
    if(checkFlag) {
      $('#dbblock-connecter').empty();
      $('#dbtx-connecter').empty();
    }
    
    await appendBlocks(_block);
    await appendTxs(_tx);       
  };

  var appendBlocks = async (_block) => {
      checkFlag = true;
      _block.forEach(ele => {
          var blockNm = ele;
          $('#dbblock-connecter').append(
                                          "<div class='table100-body js-pscroll'>"
                                          + "<table>"
                                          +   "<tbody>"
                                          +     "<tr class='row100 body'>"
                                          +       "<td class='cell100 column1'>Block Height</td>"
                                          +       "<td class='cell100 column2'>"
                                          +         "<a class='btn btn-xs btn-block btn-soft-primary' href='/' style='font-size: 16px;'>" + blockNm + "</a>"
                                          +       "</td>"
                                          +     "</tr>"
                                          +   "</tbody>"
                                          +  "</table>"
                                          +"</div>"
                                                                                        
          );            
      });
  }
                                          
  var appendTxs = async (_tx) => {
      checkFlag = true;
      _tx.forEach(ele => {
          var hashNm = ele;
          $('#dbtx-connecter').append(
                                      "<div class='table100-body js-pscroll'>"
                                      + "<table>"
                                      +   "<tbody>"
                                      +     "<tr class='row100 body'>"
                                      +       "<td class='cell100 column1'>Tx</td>"
                                      +       "<td class='cell100 column2'>"
                                      +         "<a class='btn btn-xs btn-block btn-soft-primary' href='/' style='font-size: 16px;'>" + hashNm + "</a>"
                                      +       "</td>"
                                      +     "</tr>"
                                      +   "</tbody>"
                                      +  "</table>"
                                      +"</div>"
                                      
          );            
      });
  };

  var fn_getBlockData = async () => {
      return new Promise(function (resolve, reject) {
          try {
              $.ajax({
                  url: '/ethereum/getBlockDB',
                  dataType: 'json',
                  type: 'get',                       
                  success: function(result) {
                      resolve(result);
                  }
              });
          } catch (error) {
              reject(error);
          }
      }).catch(e => console.log(e));
  };

  var fn_getTxData = async () => {
      return new Promise(function (resolve, reject) {
          try {
              $.ajax({
                  url: '/ethereum/getTxDB',
                  dataType: 'json',
                  type: 'get',                    
                  success: function(result) {
                      resolve(result);
                  }
              });
          } catch (error) {
              reject(error);
          }
      }).catch(e => console.log(e));
  };
</script>
